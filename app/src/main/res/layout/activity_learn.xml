            android:layout_margin="7dp"
            android:layout_weight="1"
            android:width="65dp"
            android:height="60dp"
            android:minWidth="40dp"
            android:text="Q"
            android:textAlignment="center" />

        <Button
            android:id="@+id/r_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:width="65dp"
            android:height="60dp"
            android:minWidth="40dp"
            android:text="R"
            android:textAlignment="center" />

        <Button
            android:id="@+id/s_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:width="65dp"
            android:height="60dp"
            android:minWidth="40dp"
            android:text="S"
            android:textAlignment="center" />

        <Button
            android:id="@+id/t_btn"
